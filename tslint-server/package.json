{
	"name": "tslint-server",
	"version": "0.0.1",
	"private": false,
	"description": "TSLint Linter Server",
	"homepage": "https://github.com/CodeEditorLand/Foundation#readme",
	"bugs": {
		"url": "https://github.com/CodeEditorLand/Foundation/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/CodeEditorLand/Foundation.git"
	},
	"license": "SEE LICENSE IN LICENSE",
	"author": {
		"name": "Playform",
		"email": "Hello@Playform.Cloud",
		"url": "https://playform.cloud"
	},
	"type": "module",
	"scripts": {
		"compile": "installServerIntoExtension ../tslint ./package.json ./src/tsconfig.json && tsc -p ./src",
		"prepublishOnly": "TypeScriptESBuild 'Source/**/*.ts'",
		"watch": "installServerIntoExtension ../tslint ./package.json ./src/tsconfig.json && tsc --watch -p ./src"
	},
	"dependencies": {
		"minimatch": "9.0.3",
		"semver": "7.6.0",
		"vscode-languageserver": "9.0.1",
		"vscode-uri": "3.0.8"
	},
	"devDependencies": {
		"@types/minimatch": "5.1.2",
		"@types/mocha": "10.0.6",
		"@types/node": "20.11.30",
		"@types/semver": "7.5.8",
		"mocha": "10.3.0",
		"typescript": "5.4.2",
		"typescript-esbuild": "latest"
	},
	"publishConfig": {
		"access": "public"
	}
}
