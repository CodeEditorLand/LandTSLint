{
	"name": "tslint-server",
	"version": "0.0.1",
	"private": "false",
	"description": "TSLint Linter Server",
	"homepage": "https://github.com/CodeEditorLand/CodeEditorLand#readme",
	"bugs": {
		"url": "https://github.com/CodeEditorLand/CodeEditorLand/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/CodeEditorLand/CodeEditorLand.git"
	},
	"license": "MIT",
	"author": {
		"name": "Nikola Hristov",
		"email": "nikola@nikolahristov.tech",
		"url": "https://nikolahristov.tech"
	},
	"publisher": "playform",
	"type": "module",
	"scripts": {
		"compile": "installServerIntoExtension ../tslint ./package.json ./src/tsconfig.json && tsc -p ./src",
		"prepublishOnly": "TypeScriptESBuild 'Source/**/*.ts'",
		"pretest": "tsc -p ./test",
		"test": "mocha test/out/test",
		"watch": "installServerIntoExtension ../tslint ./package.json ./src/tsconfig.json && tsc --watch -p ./src"
	},
	"dependencies": {
		"minimatch": "9.0.3",
		"semver": "7.5.4",
		"vscode-languageserver": "9.0.1",
		"vscode-uri": "3.0.8"
	},
	"devDependencies": {
		"@types/minimatch": "5.1.2",
		"@types/mocha": "10.0.3",
		"@types/node": "20.8.9",
		"@types/semver": "7.5.4",
		"mocha": "10.2.0",
		"tslint": "5.20.1",
		"typescript": "5.2.2",
		"typescript-esbuild": "0.3.1"
	},
	"engines": {
		"node": "*"
	},
	"publishConfig": {
		"access": "public"
	}
}
