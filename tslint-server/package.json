{
	"dependencies": {
		"minimatch": "9.0.3",
		"semver": "7.6.0",
		"vscode-languageserver": "9.0.1",
		"vscode-uri": "3.0.8"
	},
	"description": "TSLint Linter Server",
	"devDependencies": {
		"@types/minimatch": "5.1.2",
		"@types/mocha": "10.0.6",
		"@types/node": "20.11.30",
		"@types/semver": "7.5.8",
		"mocha": "10.3.0",
		"typescript": "5.4.2",
		"typescript-esbuild": "0.4.5"
	},
	"name": "tslint-server",
	"scripts": {
		"compile": "installServerIntoExtension ../tslint ./package.json ./src/tsconfig.json && tsc -p ./src",
		"prepublishOnly": "TypeScriptESBuild 'Source/**/*.ts'",
		"watch": "installServerIntoExtension ../tslint ./package.json ./src/tsconfig.json && tsc --watch -p ./src"
	},
	"type": "module"
}
